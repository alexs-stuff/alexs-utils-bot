import { Client, Embed, EmbedBuilder, Interaction} from "discord.js";
import { config } from "../../config/config";

export default {
	name: 'ping',
	description: 'See the latency of the bot',
	onCallback: async function(client:Client,interaction:Interaction) {
		if (!interaction.isChatInputCommand()) return;
		await interaction.deferReply();
		interaction.editReply({
			embeds: [
				new EmbedBuilder()
				        .setTitle('Pong!')
				        .setDescription(`Latency: ${client.ws.ping}ms`)
						.setFooter({text: `BOT VERSION: ${config.pkg.version}`})
			]
		});
	},
	options: [],
	permissions: [],
	contexts: [],
}